{% extends "layouts/base.njk" %}

{% set bodyClass = "post" %}

{% block pageHeader %}
<header>
    <h1>{{ title }}</h1>
    <time datetime="{{ date | isoDate }}">{% _d locale, "LL", date %}</time>
</header>
{% endblock %}

{% block content %}
<div class="content">
    {{ content | safe }}
</div>
{% endblock %}
