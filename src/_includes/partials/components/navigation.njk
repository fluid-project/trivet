            <nav class="nav" id="menu" aria-label="{% _ locale, "menu" %}">
                <ul>
                    {% set navItems = collections.all | eleventyNavigation %}
                    {% for item in navItems %}
                    {% if locale === item.lang %}
                    <li>
                        <a href="{{ item.url | url }}"{% if item.url == page.url %} aria-current="page"{% endif %}>{{ item.title }}</a>
                    </li>
                    {% endif %}
                    {% endfor %}
                    {% set links = page.url | locale_links %}
                    {%- for link in links %}
                    <li lang="{{ link.lang }}">
                        <a href="{{ link.url }}" hreflang="{{ link.lang }}">{{ link.label }}</a>
                    </li>
                    {%- endfor -%}
                </ul>
            </nav>
