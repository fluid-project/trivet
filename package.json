{
    "name": "trivet",
    "version": "0.1.0-dev.0",
    "description": "Trivet is a simple starter kit for Eleventy-based static sites for the Fluid Project.",
    "scripts": {
        "build": "npm-run-all -l clean build:*",
        "build:webpack": "mix --production",
        "build:eleventy": "cross-env NODE_ENV=production eleventy",
        "clean": "rimraf dist",
        "cms": "netlify-cms-proxy-server",
        "dev": "cross-env NODE_ENV=development eleventy --serve",
        "lint": "fluid-lint-all",
        "release": "standard-version -t ''",
        "start": "npm-run-all -l clean -p start:*",
        "start:webpack": "mix watch",
        "start:eleventy": "run-p dev cms"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fluid-project/trivet.git"
    },
    "author": "OCAD University",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/fluid-project/trivet/issues"
    },
    "homepage": "https://github.com/fluid-project/trivet#readme",
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "dependencies": {
        "@11ty/eleventy": "0.12.1",
        "@11ty/eleventy-navigation": "0.3.2",
        "@11ty/eleventy-plugin-rss": "1.1.1",
        "@11ty/eleventy-plugin-syntaxhighlight": "3.1.2",
        "eleventy-plugin-fluid": "0.3.0",
        "infusion": "4.0.0-dev.20210622T193827Z.ac6adb829.FLUID-6629"
    },
    "devDependencies": {
        "@commitlint/cli": "13.1.0",
        "@commitlint/config-conventional": "13.1.0",
        "cross-env": "7.0.3",
        "debug": "4.3.2",
        "fluid-lint-all": "1.1.4",
        "html-minifier": "4.0.0",
        "husky": "4.3.8",
        "image-size": "1.0.0",
        "laravel-mix": "6.0.19",
        "linkedom": "0.11.0",
        "move-file": "2.1.0",
        "netlify-cms-proxy-server": "1.3.19",
        "npm-run-all": "4.1.5",
        "postcss": "8.3.6",
        "resolve-url-loader": "^3.1.2",
        "rimraf": "3.0.2",
        "sass": "1.35.2",
        "sass-loader": "12.1.0",
        "slugify": "1.6.0",
        "standard-version": "9.3.1",
        "stylus": "0.54.8",
        "stylus-loader": "6.1.0"
    }
}
